@import "~normalize.css/normalize.css"
@import "~src/assets/styles/icon.css"
@import "~src/stylus/core/variables.styl"


html
body
  background-color: $gray60
  height: 100vh
  min-height: 100vh

/* width */
::-webkit-scrollbar {
    width: 10px;
}

/* Track */
::-webkit-scrollbar-track {
    box-shadow: inset 0 0 2.5px grey;
    border-radius: 5px;
}

/* Handle */
::-webkit-scrollbar-thumb {
    background: red;
    border-radius: 5px;
}

/* Handle on hover */
::-webkit-scrollbar-thumb:hover {
    background: #b30000;
}
