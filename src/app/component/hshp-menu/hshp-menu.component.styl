@import "~src/stylus/core/variables.styl"

.contenedor
  background-color: transparent
  height: 100vh
  width: 100%

  .contenedor-logo
    background-color: transparent
    height: 68px
    width: 100%

    img
      height: auto
      padding: 5px 0px
      width: 100%

  .contenedor-modulo
    background-color: transparent
    height: calc(100vh - 68px * 2 - 4px * 2)
    width: 100%

  .contenedor-power-off
    background-color: transparent
    padding-top: 9px
    text-align: center
