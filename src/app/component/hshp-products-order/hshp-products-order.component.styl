@import "~src/stylus/core/variables.styl"

.contenedor
  background-color: transparent
  display: table
  height: calc(100vh - 354px)
  padding: 10px
  width: calc(100% - 420px)

  .cartas
    padding: 15px

    .numero-pedido
      display: table-cell
      overflow-x: auto
      overflow-y: hidden
      vertical-align: middle
      width: 100%

      button.btn-cube
        height: 40px
        width: 40px
        margin: 2px 4px
        padding: 0px
        min-width: auto

        .mat-icon
          height: 24px
          width: 24px
          font-size: 24px

        span
          font-size: 16px
          font-weight: 600

    .select-empleado
      display: table-cell
      padding: 5px 5px

    .productos-tabla
      height: 270px
      margin: 15px 0px 0px
      overflow: auto

      table
        width: 100%

        .tabla-footer
          padding: 10px 0px

          td
            border-bottom-width: 0px

        .pedidos-btn
          padding-left: 0px

          button:first-child
            margin-right: 10px

        .pedidos-total
          font-size: 30px
          font-weight: bold
